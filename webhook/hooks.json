[
  {
    "id": "notes-main",
    "execute-command": "/opt/notes-webhook/deploy.sh",
    "command-working-directory": "/opt/notes-webhook",
    "pass-arguments-to-command": [
      { "source": "payload", "name": "ref" }
    ],
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "payload-hmac-sha256",
            "secret": "{{WEBHOOK_SECRET}}",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature-256"
            }
          }
        },
        {
          "match": {
            "type": "value",
            "value": "refs/heads/main",
            "parameter": {
              "source": "payload",
              "name": "ref"
            }
          }
        }
      ]
    }
  },
  {
    "id": "notes-dev",
    "execute-command": "/opt/notes-webhook/deploy.sh",
    "command-working-directory": "/opt/notes-webhook",
    "pass-arguments-to-command": [
      { "source": "payload", "name": "ref" }
    ],
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "payload-hmac-sha256",
            "secret": "{{WEBHOOK_SECRET}}",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature-256"
            }
          }
        },
        {
          "match": {
            "type": "value",
            "value": "refs/heads/dev",
            "parameter": {
              "source": "payload",
              "name": "ref"
            }
          }
        }
      ]
    }
  }
]
